{
  "manifest_version": 3,
  "name": "SorryField Extension",
  "version": "${version}",
  "author": "Chu Hyeonjin",
  "description": "Extension for SorryField",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "cookies", "storage"],
  "host_permissions": ["https://sorry.daldal.so/*"],
  "content_scripts": [
    {
      "matches": ["https://sorry.daldal.so/*"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "1024": "icon1024.png"
  }
}
